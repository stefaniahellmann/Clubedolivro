import React from 'react';
import { useTheme } from '../contexts/ThemeContext';

export const FloatingThemeToggle: React.FC = () => {
  const { theme, toggleTheme } = useTheme();
  const isDark = theme === 'dark';

  return (
    <button
      onClick={toggleTheme}
      aria-label={isDark ? 'Mudar para tema claro' : 'Mudar para tema escuro'}
      title={isDark ? 'Tema claro' : 'Tema escuro'}
      className="
        fixed bottom-5 right-5 z-50
        inline-flex items-center justify-center
        h-12 w-12 rounded-full
        shadow-lg transition
        bg-white/90 hover:bg-white dark:bg-zinc-800/90 dark:hover:bg-zinc-800
        border border-zinc-200 dark:border-zinc-700
        backdrop-blur
      "
    >
      {isDark ? (
        // Ícone do Sol (mostra quando está no escuro)
        <svg xmlns="http://www.w3.org/2000/svg" className="h-6 w-6" viewBox="0 0 24 24" fill="none" stroke="currentColor">
          <circle cx="12" cy="12" r="4" strokeWidth="2" />
          <path d="M12 2v2M12 20v2M4.93 4.93l1.41 1.41M17.66 17.66l1.41 1.41M2 12h2M20 12h2M4.93 19.07l1.41-1.41M17.66 6.34l1.41-1.41" strokeWidth="2" />
        </svg>
      ) : (
        // Ícone da Lua (mostra quando está no claro)
        <svg xmlns="http://www.w3.org/2000/svg" className="h-6 w-6" viewBox="0 0 24 24" fill="none" stroke="currentColor">
          <path d="M21 12.79A9 9 0 1 1 11.21 3c.2 0 .39.01.58.03A7 7 0 0 0 21 12.79z" strokeWidth="2" />
        </svg>
      )}
    </button>
  );
};
